<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fd98f5b6">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="258dp"
        android:layout_height="41dp"
        android:layout_alignLeft="@+id/etdataname"
        android:layout_alignStart="@+id/etdataname"
        android:layout_below="@+id/tvaddp"
        android:layout_marginTop="25dp"
        android:entries="@array/type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvaddp" />

    <TextView
        android:id="@+id/tvaddp"
        android:layout_width="290dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Add Product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etdataname"
        android:layout_width="277dp"
        android:layout_height="61dp"
        android:layout_alignEnd="@+id/tvaddp"
        android:layout_alignRight="@+id/tvaddp"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <EditText
        android:id="@+id/etdataprice"
        android:layout_width="278dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/etdataname"
        android:layout_alignStart="@+id/etdataname"
        android:layout_below="@+id/etdataname"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etdatadesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etdataname"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etdatadesc"
        android:layout_width="278dp"
        android:layout_height="59dp"
        android:layout_alignLeft="@+id/etdataprice"
        android:layout_alignStart="@+id/etdataprice"
        android:layout_below="@+id/etdataprice"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnsave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_below="@+id/etdatadesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>